{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ModbusX",
  "version": "0.1.0",
  "identifier": "com.modbusx.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Modbusx",
        "hiddenTitle": true,
        "width": 900,
        "height": 700,
        "minHeight": 600,
        "minWidth": 600,
        "center": true,
        "titleBarStyle": "Overlay",
        "visible": false,
        "trafficLightPosition": {
          "x": 20,
          "y": 18
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
